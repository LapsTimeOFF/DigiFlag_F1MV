{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "useUnknownInCatchVariables": false,
        "outDir": "dist"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
